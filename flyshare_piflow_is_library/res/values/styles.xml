<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="radio_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:background">#00383737</item>
    </style>

    <style name="app_store_rationbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/app_store_rationbar</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <!-- 自定义对话框样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textSize">@dimen/acount_alter_change_img_dialog_title_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#33b5e5</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/allset_title_bg</item>
    </style>

    <style name="CustomWindowTitleText">
        <item name="android:textSize">@dimen/custom_window_text_size</item>
        <item name="android:textColor">#FFffffff</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Black.NoTitleBar" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">@dimen/black_notitlebar_title_size</item>
        <item name="android:windowTitleStyle">@style/CustomWindowTitleText</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>

        <!-- <item name="android:autoCompleteTextViewStyle">@style/customAutoCompleteTextView</item> -->
        <!-- <item name="android:editTextStyle">@style/customEditText</item> -->
        <!-- <item name="android:expandableListViewStyle">@style/customExpandableListView</item> -->
        <!-- <item name="android:radioButtonStyle">@style/customRadioButton</item> -->

    </style>

    <style name="Default" parent="@style/Black.NoTitleBar">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupmenu_in</item>
        <item name="android:windowExitAnimation">@anim/popupmenu_out</item>
    </style>

    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/selector_edittext_bg</item>
    </style>

    <style name="RadioButtonStyles">
        <item name="android:button">@drawable/radiobtn_sex</item>
    </style>

    <style name="checkboxStyles">
        <item name="android:button">@drawable/showpwd_checkbox_selector</item>
    </style>
    
    <style name="Transparent" parent="android:style/Theme.Translucent">
            <item name="android:windowBackground">@color/transparent_background</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
        </style>

</resources>