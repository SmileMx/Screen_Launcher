<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_news_topic3"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_news_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="7dp"
        android:gravity="left|top"
        android:maxLines="3"
        android:text="企业家称赞香港经商环境"
        android:textSize="@dimen/news_text_midtitle_size" />

    <TextView
        android:id="@+id/text_news_from3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_news_title3"
        android:layout_below="@+id/text_news_title3"
        android:layout_marginTop="6dp"
        android:maxLength="5"
        android:text="新浪网"
        android:textColor="@color/littletext"
        android:textSize="@dimen/news_text_from_time_image_size" />

    <TextView
        android:id="@+id/text_news_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_news_from3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/text_news_from3"
        android:text="1小时前"
        android:textColor="@color/littletext"
        android:textSize="@dimen/news_text_from_time_image_size" />

    <TextView
        android:id="@+id/text_news_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_news_title3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/text_news_time3"
        android:background="@drawable/content_haspic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_news_topic_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:background="#ff6633"
        android:padding="3dp"
        android:text="专题"
        android:textColor="#ffffff"
        android:textSize="@dimen/news_text_topicicon2_size" />

</RelativeLayout>