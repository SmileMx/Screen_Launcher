<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/waterwall_background"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/waterwall_main_item_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </LinearLayout>

    <com.inveno.piflow.entity.view.waterwall.WaterwallFFItem
        android:id="@+id/waterwall_main_item_ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/waterwall_main_item_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/waterwall_linearlayout_gap"
            android:layout_weight="1.0"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/waterwall_main_item_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/waterwall_linearlayout_gap"
            android:layout_weight="1.0"
            android:orientation="vertical" >
        </LinearLayout>
    </com.inveno.piflow.entity.view.waterwall.WaterwallFFItem>

    <TextView
        android:id="@+id/waterwall_main_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="15sp" />

</LinearLayout>