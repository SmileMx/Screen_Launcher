<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/waterfall_news_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="12px"
        android:layout_marginLeft="@dimen/waterfall_newsdetail_tv_margin"
        android:layout_marginRight="@dimen/waterfall_newsdetail_tv_margin"
        android:text="TextView" />

    <ImageView
        android:id="@+id/waterfall_news_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/waterwall_list_default" 
        android:scaleType="centerCrop"/>

</LinearLayout>