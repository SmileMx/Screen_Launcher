<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layoutAnimation="@anim/praise_red_heart_layoutanimation" >

    <ImageView
        android:layout_marginTop="150dp"
        android:layout_width="@dimen/news_comment_praise_width_and_height"
        android:layout_height="@dimen/news_comment_praise_width_and_height" />

    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/news_comment_praise_width_and_height"
        android:gravity="center"
        android:text=" + 1"
        android:textColor="#df3928"
        android:textSize="@dimen/news_comment_praise_text_size" />

</LinearLayout>